extends layout_login
block content
    header.card-header
        h4.card-title ZaWash LogIn
        if alert == "error"
            div.alert.alert-danger An error occurred, invalid username or password
        br
        form(method="POST" action='/login')
            div.form-row
                div.col.form-group
                    label Username
                    input.form-control(name="username")
                div.col.form-group
                    label Password
                    input.form-control(type="password" name="password")
            div.form-row
                div.col.form-group
                    button.btn.btn-primary.btn-block Login 
                

                            